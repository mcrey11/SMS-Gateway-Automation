# Environment Configuration for SMS Gateway System
# Copy this file to .env and update with your actual values

# ===== Messenger Webhook Server Configuration =====
# Port for the Messenger webhook server
PORT=5000

# Android Gateway URL (update with your device's IP address)
ANDROID_GATEWAY_URL=http://192.168.1.50:8080/reload

# API Key for authentication between services
API_KEY=change-this-to-a-secure-random-key

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Enable debug mode (set to False in production)
DEBUG=False

# ===== Android Gateway Server Configuration =====
# Port for Android gateway API (if running Python mock server)
# GATEWAY_PORT=8080

# ===== Logging Configuration =====
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ===== Security Settings =====
# Enable HTTPS (requires SSL certificates)
# USE_HTTPS=False
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# ===== Transaction Settings =====
# Maximum transaction amount in pesos
MAX_AMOUNT=10000

# Minimum transaction amount in pesos
MIN_AMOUNT=1

# ===== Monitoring =====
# Enable metrics collection
# ENABLE_METRICS=True

# Metrics export port
# METRICS_PORT=9090
